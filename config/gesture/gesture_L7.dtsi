&zip_mouse_gesture {
    enable-eager-mode;
    stroke-size = <15>;           /* 15ピクセル分動いたら1つの線とする */
    movement-threshold = <10>;    /* 10ピクセル以上の速い動きで開始 */
    idle-timeout-ms = <50>;       /* 判定を早く締め切る */
    gesture-cooldown-ms = <100>;

    /* 全方向に単純なキーを割り当て */
    left   { pattern = <GESTURE_LEFT>;  bindings = <&kp A>; };
    right  { pattern = <GESTURE_RIGHT>; bindings = <&kp B>; };
    up     { pattern = <GESTURE_UP>;    bindings = <&kp C>; };
    down   { pattern = <GESTURE_DOWN>;  bindings = <&kp D>; };
};
