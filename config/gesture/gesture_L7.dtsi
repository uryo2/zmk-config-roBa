&zip_mouse_gesture {
    enable-eager-mode;
    stroke-size = <30>;          /* 30ピクセル分くらいの移動を1つの線として見る */
    movement-threshold = <20>;   /* 20ピクセル以上動いたら「弾いた」とみなす */
    idle-timeout-ms = <100>;     /* 止まったらすぐ判定 */
    gesture-cooldown-ms = <100>;

    /* テストのため、確実に分かりやすい文字を割り当て */
    prev_tab    { pattern = <GESTURE_LEFT>;  bindings = <&kp A>; };
    next_tab    { pattern = <GESTURE_RIGHT>; bindings = <&kp B>; };
    Create_tab  { pattern = <GESTURE_UP>;    bindings = <&kp C>; };
    close_tab   { pattern = <GESTURE_DOWN>;  bindings = <&kp D>; };
};
