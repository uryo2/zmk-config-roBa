/*
 * Layer 2 Mouse Gestures
 *
 * Bindings:
 * - UP:    LC(L)  (Focus URL bar)
 * - DOWN:  LG(S)  (Save / Screenshot?)
 * - LEFT:  LEFT   (Arrow Left)
 * - RIGHT: LG(T)  (New Tab)
 */

/ {
    zip_mouse_gesture_l2: zip_mouse_gesture_l2 {
        compatible = "zmk,input-processor-mouse-gesture";
        #input-processor-cells = <0>;
        enable-eager-mode;
        
        // 感度設定（少し反応しやすく）
stroke-size = <220>;          // 100(敏感)と280(鈍重)の間をとって180
        movement-threshold = <30>;    // 10(敏感)と40(鈍重)の間をとって25
        idle-timeout-ms = <100>;      // 止め際をスッキリさせるため100に戻す
        gesture-cooldown-ms = <150>;  // 暴発を防ぐため、一度発動した後の受付停止時間を少し確保

        // ユーザー指定のバインディング
        focus_url        { pattern = <GESTURE_UP>;    bindings = <&kp LS(F11)>; };
        taskbar_prev     { pattern = <GESTURE_LEFT>;  bindings = <&kp LC(PG_UP)>; };
        taskbar_next     { pattern = <GESTURE_RIGHT>; bindings = <&kp LC(PG_DN)>; };
    };
};
